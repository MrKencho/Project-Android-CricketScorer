<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.cricketscorer.MainActivity"
    android:background="#454343">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fa7202" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team 1"
                android:fontFamily="sans-serif-light"
                android:textSize="25sp"
                android:textColor="#FFFFFF"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fa7202" />
            <TextView
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content"
                android:text="SCORE"
                android:textSize="18sp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/score_team_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="0"
                android:textColor="#fa7202"
                android:layout_gravity="center_horizontal"
                android:textSize="56sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fa7202" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:onClick="one_1"/>
                <Button
                    android:textSize="16sp"
                    android:onClick="two_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fa7202" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="16sp"
                    android:onClick="four_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"/>
                <Button
                    android:textSize="16sp"
                    android:onClick="six_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fa7202" />

            <TextView
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content"
                android:text="WICKETS"
                android:textSize="18sp"
                android:textColor="#fff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/wickets_team_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="0"
                    android:textColor="#fa7202"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="42sp"/>
                <Button
                    android:onClick="inc_wickets_1"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="+"
                    android:textSize="20sp"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content"
                android:text="OVERS"
                android:textSize="18sp"
                android:textColor="#fff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/overs_team_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="0.0"
                    android:textColor="#fa7202"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="42sp"/>
                <Button
                    android:onClick="inc_overs_1"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="+"
                    android:textSize="20sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fa7202" />
        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#fa7202" />
        <!--android:layout_marginTop="120dp"
        android:layout_marginBottom="190dp"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fa7202" />
            <TextView
                android:fontFamily="sans-serif-light"
                android:textSize="25sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team 2"
                android:textColor="#FFFFFF"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fa7202" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCORE"
                android:textSize="18sp"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="0"
                android:id="@+id/score_team_2"
                android:textColor="#fa7202"
                android:layout_gravity="center_horizontal"
                android:textSize="56sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fa7202" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:onClick="one_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"/>
                <Button
                    android:onClick="two_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="2"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fa7202" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:onClick="four_2"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"/>
                <Button
                    android:onClick="six_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="16sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fa7202" />

            <TextView
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content"
                android:text="WICKETS"
                android:textSize="18sp"
                android:textColor="#fff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="0"
                    android:id="@+id/wickets_team_2"
                    android:textColor="#fa7202"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="42sp"/>
                <Button
                    android:onClick="inc_wickets_2"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="+"
                    android:textSize="20sp"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content"
                android:text="OVERS"
                android:textSize="18sp"
                android:textColor="#fff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="0.0"
                    android:textColor="#fa7202"
                    android:layout_marginTop="10dp"
                    android:id="@+id/overs_team_2"
                    android:layout_marginLeft="12dp"
                    android:textSize="42sp"/>
                <Button
                    android:onClick="inc_overs_2"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="+"
                    android:textSize="20sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fa7202" />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_gravity="center_horizontal"
        android:text="RESET"
        android:layout_width="wrap_content"
        android:onClick="reset"
        android:layout_height="wrap_content" />
</LinearLayout>
